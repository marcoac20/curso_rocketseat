{% extends "layout.njk" %}

{% block content %}

    <div id="sobre">
        <h1>Conteúdo</h1>
    </div>

    <section class="cards">

        <div class="card" id="starter">
            <div class="card__image">
                <img src="/starter.svg" alt="Starter">
            </div>

            <div class="card__content">
                <p>Starter</p>
            </div>

            <div class="card__info">
                <p>5 Modúlos</p>
                <p class="card__price">Free</p>
            </div>
        </div>

        <div class="card" id="launchbase">
            <div class="card__image">
                <img src="/launchbase.svg" alt="launchbase">
            </div>

            <div class="card__content">
                <p>LancheBase</p>
            </div>

            <div class="card__info">
                <p>11 Modúlos</p>
                <p class="card__price">Pago</p>
            </div>
        </div>

        <div class="card" id="gostack">
            <div class="card__image">
                <img src="gostack.svg" alt="/gostack">
            </div>

            <div class="card__content">
                <p>GoStack</p>
            </div>

            <div class="card__info">
                <p>5 Modúlos</p>
                <p class="card__price">pago</p>
            </div>
        </div>

    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>
            <a class="maximize-modal">
                <i class="material-icons">maximize</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="/scripts.js"></script>

{% endblock %}